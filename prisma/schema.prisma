generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model livros {
  id_livro       BigInt    @id @unique @default(autoincrement())
  titulo         String
  subtitulo      String?
  autor          String
  ano_publicacao Int?      @db.SmallInt
  isbn           String    @db.VarChar
  descricao      String?
  criado_em      DateTime? @db.Timestamptz(6)
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model tabela_teste {
  id          BigInt   @id @default(autoincrement())
  created_at  DateTime @default(now()) @db.Timestamptz(6)
  teste_teste String?

  @@map("tabela teste")
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model emprestimos {
  id_emprestimo     Int       @id @unique @default(autoincrement())
  id_exemplar       Int?
  id_livro          Int?
  id_usuario        String?   @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  realizado_em      DateTime  @default(now()) @db.Timestamptz(6)
  data_realizado_em DateTime? @default(dbgenerated("(now())::date")) @db.Date
  data_devolucao_em DateTime? @default(dbgenerated("(now() + '7 days'::interval)")) @db.Date
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model exemplares {
  id_exemplar BigInt   @id @default(autoincrement())
  id_livro    BigInt?
  created_at  DateTime @default(now()) @db.Timestamptz(6)
}
